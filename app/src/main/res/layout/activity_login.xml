<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_color"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="278dp"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="116dp"
                app:srcCompat="@drawable/icontransparent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="202dp"
                android:layout_marginEnd="36dp"
                android:fontFamily="@font/oceanwidesemibold"
                android:text="Running HN"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="50dp" />

            <EditText
                android:id="@+id/altxtPass"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="427dp"
                android:layout_marginEnd="30dp"
                android:ems="10"
                android:fontFamily="@font/ptsans_regular"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/altxtUser"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="352dp"
                android:layout_marginEnd="30dp"
                android:ems="10"
                android:fontFamily="@font/ptsans_regular"
                android:hint="Correo electrónico"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="549dp"
                android:layout_marginEnd="46dp"
                app:srcCompat="@drawable/boton" />

            <TextView
                android:id="@+id/albtnIngresar"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="55dp"
                android:layout_marginTop="557dp"
                android:layout_marginEnd="65dp"
                android:fontFamily="@font/oceanwidesemibold"
                android:gravity="center"
                android:text="Iniciar Sesión"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="618dp"
                android:layout_marginEnd="33dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/oceanwidesemibold"
                    android:text="¿Aún no tienes una cuenta?"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/albtnRegistrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/oceanwidesemibold"
                    android:text=" Registrarse"
                    android:textAlignment="textStart"
                    android:textColor="#1fc21a"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="475dp"
                android:layout_marginEnd="38dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/ptsans_regular"
                    android:text="¿Olvidaste la contraseña?"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/olvidastepass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/ptsans_regular"
                    android:text=" Da click aquí para recuperarla"
                    android:textAlignment="textStart"
                    android:textColor="#1fc21a"
                    android:textSize="14dp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/alckRecordar"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="52dp"
                android:layout_marginTop="498dp"
                android:layout_marginEnd="200dp"
                android:fontFamily="@font/oceanwidesemibold"
                android:text="Recordar mis datos"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="14dp" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
