<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/clasiNumtop"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/ptsans_regular"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/cimgfoto"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:maxWidth="70dp"
                android:maxHeight="50dp"
                tools:srcCompat="@tools:sample/avatars"
                android:scaleType="fitXY"
                android:paddingHorizontal="10dp"/>

            <TextView
                android:id="@+id/cNombreCompleto"
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:text="Esteban Ariel Cerrato Pavon"
                android:minWidth="155dp"
                android:maxWidth="155dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/ptsans_regular"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/ckilometro"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:minWidth="60dp"
                android:maxWidth="60dp"
                android:paddingHorizontal="5dp"
                android:text="300.00k"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/ptsans_regular"
                android:gravity="center_vertical"
                android:textAlignment="textEnd"/>

            <TextView
                android:id="@+id/cKcal"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:minWidth="60dp"
                android:maxWidth="60dp"
                android:text="120.00K"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:paddingEnd="5dp"
                android:fontFamily="@font/ptsans_regular"
                android:gravity="center_vertical"
                android:textAlignment="textEnd"/>
        </TableRow>

    </TableLayout>

</LinearLayout>

