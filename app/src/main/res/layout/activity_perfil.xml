<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Perfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#8be27e"
            android:weightSum="10">

            <TextView
                android:id="@+id/perbtnAtras"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/oceanwidesemibold"
                android:gravity="center"
                android:text="Atrás |"
                android:textColor="@color/white"
                android:textSize="18dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:textSize="24dp"
                android:text="PERFIL"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/oceanwidesemibold"></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"></LinearLayout>
        </LinearLayout>
        Barra Superior


        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp">

                <ImageView
                    android:id="@+id/fhImage"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:maxWidth="200dp"
                    android:minWidth="200dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/user"/>

                <TextView
                    android:id="@+id/lblnombres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ptsans_regular"
                    android:textSize="16sp"
                    android:text="Nombre"
                    android:layout_marginTop="25dp"/>

                <EditText
                    android:id="@+id/fhtxtnombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ptsans_regular"
                    android:textSize="20sp"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName"/>

                <TextView
                    android:id="@+id/lblFechaNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ptsans_regular"
                    android:text="Fecha Nacimiento"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/fhfecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:fontFamily="@font/ptsans_regular"
                    android:inputType="date"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lblPais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ptsans_regular"
                    android:text="Pais"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/fhtxtPais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:fontFamily="@font/ptsans_regular"
                    android:inputType="textPersonName"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lblTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ptsans_regular"
                    android:text="Teléfono"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/fhtelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:fontFamily="@font/ptsans_regular"
                    android:inputType="phone"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ptsans_regular"
                    android:text="Correo"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/fhcorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:fontFamily="@font/ptsans_regular"
                    android:inputType="textEmailAddress"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="183dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ptsans_regular"
                            android:text="Peso"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ptsans_regular"
                            android:text="Altura"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/fhpeso"
                        android:layout_width="181dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:fontFamily="@font/ptsans_regular"
                        android:hint="lb"
                        android:inputType="number"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/fhaltura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:fontFamily="@font/ptsans_regular"
                        android:hint="cm"
                        android:inputType="numberSigned|text"
                        android:textSize="20sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/perfilbtnActualizar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oceanwidesemibold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bordes_redondos"
                    android:text="Actualizar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scrollView3" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>