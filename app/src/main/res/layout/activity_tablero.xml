<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTablero">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tablerbtnVerProgreso"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="167dp"
                    android:layout_marginEnd="20dp"
                    android:background="#950bde" />

                <TextView
                    android:id="@+id/texto1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="67dp"
                    android:layout_marginTop="238dp"
                    android:layout_marginEnd="208dp"
                    android:fontFamily="@font/ptsans_regular"
                    android:text="PROGRESO"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tablerobtnEstadistica"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="344dp"
                    android:layout_marginEnd="20dp"
                    android:background="#950bde" />

                <TextView
                    android:id="@+id/texto2"
                    android:layout_width="209dp"
                    android:layout_height="47dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="406dp"
                    android:layout_marginEnd="165dp"
                    android:fontFamily="@font/ptsans_regular"
                    android:text="ESTADÍSTICAS"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <LinearLayout
                    android:layout_width="311dp"
                    android:layout_height="95dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="53dp"
                    android:layout_marginTop="542dp"
                    android:layout_marginEnd="46dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btnNuevaCarrera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#950bde"
                        android:fontFamily="@font/oceanwidesemibold"
                        android:padding="10dp"
                        android:text="Nueva Carrera"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="32dp" />

                    <ImageView
                        android:id="@+id/ranking"
                        android:layout_width="83dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ranking" />

                    <ImageView
                        android:id="@+id/tablerobtnAmigos"
                        android:layout_width="105dp"
                        android:layout_height="79dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/grupousuarios" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="38dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="113dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/runnerapplogo" />

                    <ImageView
                        android:id="@+id/tabCerrarSesion"
                        android:layout_width="17dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cerrar_sesion" />

                    <ImageView
                        android:id="@+id/perfil"
                        android:layout_width="13dp"
                        android:layout_height="63dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/usuarioperfil" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="265dp"
                    android:layout_marginTop="193dp"
                    android:layout_marginEnd="55dp"
                    app:srcCompat="@drawable/calendar" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="257dp"
                    android:layout_marginTop="378dp"
                    android:layout_marginEnd="63dp"
                    app:srcCompat="@drawable/reportedesalud" />

            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>